            app:layout_constraintStart_toEndOf="@+id/category_search_pack_first"
            app:layout_constraintTop_toBottomOf="@+id/category_search_pack_fourth" />

        <include
            android:id="@+id/category_search_pack_seventh"
            layout="@layout/item_searchable"
            android:layout_width="150dp"
            android:layout_height="140dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/category_search_pack_fourth"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"

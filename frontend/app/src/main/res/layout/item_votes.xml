<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/upvote_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/upvote_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginHorizontal="5dp"
        android:src="@drawable/upvote_icon"
        app:layout_constraintStart_toEndOf="@+id/upvote_number"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/downvote_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/upvote_button"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/downvote_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginHorizontal="5dp"
        android:src="@drawable/downvote_icon"
        app:layout_constraintStart_toEndOf="@+id/downvote_number"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>